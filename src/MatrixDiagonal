public class YourClassNameHere {
	    public static void main(String[] args) {
	      
	      int [][] mat = {{1,2,3},{4,5,6},{7,8,9}};
	      
	      int l = 3;
	      int k = -1;
	      
	      int [] mas = new int [l];
	      
	      for (int i = 0; i < l; i++){
	       for (int j = 0; j < 3; j++){
	         
	         if (i == j){
	           k++;
	           mas[k] = mat [i][j];
	         }
	           
	         
	       }
	      }
	         
	         
	
	    }
	
